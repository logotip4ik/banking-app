datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BankUser {
  id Int @id @default(autoincrement())

  name    String
  email   String @unique
  picture String

  banks Bank[]
}

model Bank {
  id Int @id

  User   BankUser? @relation(fields: [userId], references: [id])
  userId Int?

  name           String
  interestRate   Int
  MaxLoan        Int
  MaxDownPayment Int
  LoanTerm       Int
}
