// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BankUser {
  id Int @id @default(autoincrement())

  name    String
  email   String @unique
  picture String

  banks Bank[]
}

model Bank {
  id Int @id

  Users   BankUser[]

  name           String
  interestRate   Float
  MaxLoan        Int
  MaxDownPayment Float
  LoanTerm       Int
}
