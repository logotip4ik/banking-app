datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BankUser {
  id Int @id @default(autoincrement())

  name  String
  email String @unique
  image String

  banks Bank[]
}

model Bank {
  id Int @id @default(autoincrement())

  User BankUser @relation(fields: [bankUserId], references: [id])
  bankUserId     Int

  name           String @unique
  interestRate   Float
  maxLoan        Int
  maxDownPayment Float
  loanTerm       Int
}
